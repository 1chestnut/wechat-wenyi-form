<!-- 页面整体 -->
<view class="co-page">
  <view class="header">
    <view class="section-title">（三）呼出气CO浓度评估</view>
  </view>

  <form bindsubmit="submitCOAssessment">

    <!-- CO浓度输入 -->
    <view class="form-card">
      <text class="label">呼出气CO浓度：</text>
      <view class="input-row">
        <input class="input" name="coConcentration" type="digit" />
        <text class="unit">ppm</text>
      </view>
    </view>

    <!-- 最近吸烟时间 -->
    <view class="form-card">
      <text class="label">您最近的一支烟是什么时候抽的？</text>
      <radio-group name="lastSmokeTime">
        <label class="option"><radio value="1" color="#007AFF" />1小时之内</label>
        <label class="option"><radio value="2" color="#007AFF" />1-12小时之间</label>
        <label class="option"><radio value="3" color="#007AFF" />12-24小时之间</label>
        <label class="option"><radio value="4" color="#007AFF" />24小时之前</label>
      </radio-group>
    </view>

    <!-- 提交按钮 -->
    <button class="submit-btn" form-type="submit" style="height: 112rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">提交评估</button>
  </form>
</view>
